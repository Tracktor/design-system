#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Add bun to PATH - supports official installer ($BUN_INSTALL) and Homebrew
export PATH="${BUN_INSTALL:-$HOME/.bun}/bin:/opt/homebrew/bin:/usr/local/bin:$PATH"

echo "\033[32m Running linters... \033[0m";
bun run lint

echo "\033[32m Running test... \033[0m";
bun run test --watch=false

